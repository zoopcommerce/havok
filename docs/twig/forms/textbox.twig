<h4>Programatically change appendages</h4>
<div class="bs-docs-example">
    <div class="form-horizontal">
        <f-textbox label="name" prepend="prepend" append='["app1", "app2"]' id="appendageExample"></f-textbox>
    </div>
    <w-button-group id="buttonGroup1">
        <button>.set('prepend', ['1', '2'])</button>
        <button>.set('append', '3')</button>
        <button>.addPrependage('pre')</button>
        <button>.addAppendage('post')</button>
    </w-button-group>
    <script type="text/javascript">
        require(['dijit/registry', 'havok/ready!'], function(registry){
            var buttonGroup = registry.byId('buttonGroup1');
            var textbox = registry.byId('appendageExample');

            buttonGroup.on('item-click', function(e){
                eval('textbox' + e.item.innerHTML); // Quick and dirty use of eval here.
            });
        })
        </script>
    </div>

