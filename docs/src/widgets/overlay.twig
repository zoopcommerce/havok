<h2>Overlay whole viewport</h2>
<p>To overlay the whole viewport, place the overlay as the direct child of the <code>body</code> tag.</p>

<div class="bs-docs-example">
    <button id="overlay3hide" class="btn">Hide overlay</button>
    <button id="overlay3show" class="btn">Show overlay</button>
    <script>
        require(['dojo/dom-construct', 'dojo/dom', 'dojo/on', 'havok/widget/Overlay'], function(domConstruct, dom, on, Overlay){
            var overlay = new Overlay;
            domConstruct.place(dom.byId('overlay3hide'), overlay.containerNode);
            domConstruct.place(overlay.domNode, document.body);
            overlay.startup();
            on(dom.byId('overlay3show'), 'click', function(){
                overlay.show();
            });
            on(dom.byId('overlay3hide'), 'click', function(){
                overlay.hide();
            });
        })
        </script>
    </div>

